---
import Hero from '../components_maren/Hero.astro'
import Layout from '../components_maren/layout/Layout.astro'

const title = 'Maren Siegel Portfolio • Packaging, Corporate & Grafik Design'
const description = `
  Maren Siegel arbeitet als freiberufliche Designerin aus Berlin heraus.
  Sie ist spezialisiert auf Packaging Design, Corporate Design und Grafik Design.`
---

<Layout title={title} description={description} noindex={true}>
  <Hero />
  <div class="portfolio">
    <p>
      <a href="/portfolio/Maren Siegel - Portfolio Packaging.pdf">
        <span class="reset-font">→</span>
        Portfolio Packaging &nbsp;
        <span class="text-muted">PDF &nbsp; 15 MB</span>
      </a>
      <br />

      <a href="/portfolio/Maren Siegel - Portfolio Graphic Design.pdf">
        <span class="reset-font">→</span>
        Portfolio Graphic Design &nbsp;
        <span class="text-muted">PDF &nbsp; 16 MB</span>
      </a>
      <br />

      <a href="/portfolio/Maren Siegel - Portfolio Illustration.pdf">
        <span class="reset-font">→</span>
        Portfolio Illustration &nbsp;
        <span class="text-muted">PDF &nbsp; 12 MB</span>
      </a>
      <br />

      <a href="/portfolio/Maren Siegel - Lebenslauf.pdf">
        <span class="reset-font">→</span>
        Lebenslauf &nbsp;
        <span class="text-muted">PDF &nbsp; 0,5 MB</span>
      </a>
    </p>
  </div>
</Layout>
